<div class="mx-auto w-2/3 bg-gray-50">
  <div>
    <p class="text-green-500"><%= notice %></p>
    <h1 class="text-4xl font-bold text-indigo-600 mb-8">Your Todos</h1>
  </div>

  <div class="grid grid-cols-1 gap-8 py-8 px-12 border rounded shadow-md">
    <ul id="todos">
      <%= render @todos %>
    </ul>
  </div>
  <div>
    <ul class="mt-8">
      <li class="mb-2">
        <%= link_to "New todo", new_todo_path, class: "text-indigo-600 hover:text-indigo-900" %>
      </li>
      <li>
        <%= link_to "Home", root_path, class: "text-indigo-600 hover:text-indigo-900" %>
      </li>
    </ul>
  </div>
</div>