<div class="max-w-3xl mx-auto bg-white p-8 shadow-lg">
 <%= form_with model: [@article, @article.comments.build], class: "bg-gray-100 p-6 rounded" do |form| %>
   <div class="mb-4">
     <%= form.label :commenter, class: "font-semibold mb-1 block" %><br>
     <%= form.text_field :commenter, class: "border border-gray-400 p-2 w-full rounded" %>
   </div>
   <div class="mb-4">
     <%= form.label :body, class: "font-semibold mb-1 block" %><br>
     <%= form.text_area :body, class: "border border-gray-400 p-2 w-full rounded" %>
   </div>
   <div class="mb-4">
     <%= form.label :status, class: "font-semibold mb-1 block" %><br>
     <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, { class: "border border-gray-400 p-2 w-full rounded" } %>
   </div>
   <div class="mb-2 bg-blue-300 px-4 py-2 rounded hover:bg-blue-500">
     <%= form.submit class: "text-slate-900 hover:text-indigo-900" %>
   </div>
 <% end %>
</div>